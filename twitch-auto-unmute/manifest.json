{
  "manifest_version": 3,
  "name": "Twitch Auto Unmute",
  "version": "1.0",
  "description": "Automatically unmutes Twitch streams if they get muted.",
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-auto-unmute@example.com",
      "strict_min_version": "100.0"
    }
  }
}
